# Reverse proxy for nginx - URL pointing to backend service
NGINX_PROXY=http://backend:3000
VITE_NGINX_PROXY=http://backend:3000

# Application Ports - Fixed ports for each service
PORT_STAFF=5174
PORT_CUSTOMER=5173

# Database configuration - PostgreSQL connection string
DATABASE_URL="postgresql://your_app_user:your_app_password@db:5432/food_ordering_db"

# Database Configuration (Individual Variables)
POSTGRES_PORT=5432
POSTGRES_DB=food_ordering_db
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

POSTGRES_APP_USER=your_app_user
POSTGRES_APP_PASSWORD=your_app_password

# JWT Configuration - Secret key for signing JWT tokens
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters

# For cloudinary photos - Image storage service configuration (you must replace these with your own for upload photos)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# For Oauth with Google - Google authentication configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Frontend URL for backend usage - Application URLs
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174
BACKEND_URL=http://backend:3000


